<p id="notice"><%= notice %></p>

<h1>Listing Projects</h1>
<% @projects.each do |project|%>
	<div class="project">
		<p><%= project.title %></p>
		<p>since <%= project.startdate %></p>
		<p><%= link_to (image_tag project.avatar.url(:medium)), project %></p>
		<% if project.statuses.last == nil %>
		<p>Status: Not begun</p>
		<% else %>
		<p>Status: <%= project.statuses.last.content %></p>
		<% end %>
	</div>
<% end %>
<br>

<% if user_signed_in? %>
<%= link_to 'New Project', new_project_path %>
<% end %>
